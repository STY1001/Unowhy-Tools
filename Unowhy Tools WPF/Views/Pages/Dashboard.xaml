<ui:UiPage x:Class="Unowhy_Tools_WPF.Views.Pages.Dashboard"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:local="clr-namespace:Unowhy_Tools_WPF.Views.Pages"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
           Title="Dashboard"
           Initialized="Init"
           Loaded="InitAnim"
           Unloaded="UnInitAnim"
           d:DataContext="{d:DesignInstance local:Dashboard,
                                     IsDesignTimeCreatable=False}"
           d:DesignHeight="601"
           d:DesignWidth="1126"
           Scrollable="True"
           mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <Border x:Name="RootBorder"
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <ScaleTransform ScaleX="1"
                                ScaleY="1" />
            </Border.RenderTransform>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"
                                   MinHeight="356" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Border Grid.Column="0"
                        CornerRadius="8,8,0,0"
                        Background="#0affffff">
                    <!--
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Source="../../Resources/UTLogoWhite2.0.png"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Grid.Column="1"
                       Width="480"
                       Height="180"/>
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            Grid.Column="0"
                            x:Name="utlabs">
                    <TextBlock FontSize="40"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   Text="Unowhy Tools" />
                    <TextBlock FontSize="22"
                               Foreground="#B7FFFFFF"
                               Text="A tool for Y13 computers !" />
                    <TextBlock FontSize="16"
                               Foreground="#B7FFFFFF"
                               Text="by STY1001"
                               Margin="0,5,0,0" />
                    <TextBlock FontSize="13"
                               Margin="0,5,0,0"
                               Foreground="#57FFFFFF"
                               x:Name="verlab"
                               Text="Version  (Build )" />
                </StackPanel>
            </Grid>
            -->
                    <Grid x:Name="LogoGrid">
                        <Border Background="Transparent"
                                BorderThickness="3"
                                BorderBrush="#353535"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                CornerRadius="8,8,8,8"
                                x:Name="SB1"
                                Panel.ZIndex="0">
                            <Grid MinWidth="440"
                                  MinHeight="184" />
                        </Border>
                        <Border Background="Transparent"
                                BorderThickness="1"
                                BorderBrush="#353535"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                CornerRadius="8,8,8,8"
                                x:Name="SB2"
                                Panel.ZIndex="0">
                            <Grid MinWidth="444"
                                  MinHeight="188" />
                        </Border>
                        <Border Background="#0affffff"
                                CornerRadius="8,8,8,8"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ClipToBounds="True"
                                x:Name="LogoBorder"
                                Panel.ZIndex="1"
                                BorderThickness="2"
                                BorderBrush="#353535">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="400" />
                                    <ColumnDefinition Width="20" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="20" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Column="1"
                                      Grid.Row="1">
                                    <Image Grid.Row="0"
                                           x:Name="LogoImg"
                                           RenderOptions.BitmapScalingMode="HighQuality"
                                           Source="pack://application:,,,/Resources/UTLogoWhite3.0.png"
                                           MouseDown="LogoImg_MouseDown"/>
                                </Grid>
                                <Grid Grid.Column="1"
                                      Grid.Row="2">
                                    <TextBlock FontSize="15"
                                               Margin="5,0,0,0"
                                               x:Name="LogoDesc"
                                               HorizontalAlignment="Left"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               FontFamily="Segoe UI SemiBold"
                                               Text="The all-in-one tool for your Unowhy !" />
                                    <TextBlock FontSize="15"
                                               Margin="0,0,5,0"
                                               x:Name="LogoCredit"
                                               HorizontalAlignment="Right"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               FontFamily="Segoe UI SemiBold"
                                               Text="by STY1001" />
                                </Grid>
                                <StackPanel Grid.Column="1"
                                            Grid.Row="5"
                                            VerticalAlignment="Center"
                                            Visibility="Collapsed">
                                    <ProgressBar x:Name="SplashBar"
                                                 Height="25" />
                                    <TextBlock x:Name="SplashText"
                                               Margin="0,-25,0,0"
                                               FontSize="16"
                                               FontWeight="Medium"
                                               Text="Loading..."
                                               TextAlignment="Center"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>
                        </Border>
                        <TextBlock x:Name="LogoVer"
                                   Text="Version --.-- (Build ----------)"
                                   FontFamily="Segoe UI SemiBold"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"
                                   Visibility="Collapsed"
                                   Margin="0,0,0,20" />
                    </Grid>
                </Border>
                <Border Grid.Row="1"
                        x:Name="quickoption"
                        CornerRadius="0,0,8,8"
                        VerticalAlignment="Bottom"
                        Background="#0affffff">
                    <Grid Margin="10">
                        <Grid Grid.Row="0"
                              x:Name="qogrid">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="67.25" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <ui:CardAction Grid.Column="0"
                                           Grid.Row="2"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"
                                           Click="Switch_QO2UT"
                                           x:Name="uta">
                                <Grid Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="0,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Source="../../Resources/UT.png"
                                           Grid.Column="0"
                                           Margin="0,0,0,0"
                                           RenderOptions.BitmapScalingMode="HighQuality"
                                           x:Name="utaimg" />
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Margin="0"
                                                   FontSize="13"
                                                   FontWeight="Medium"
                                                   Text="Unowhy Tools apps"
                                                   x:Name="utalab" />
                                        <TextBlock FontSize="12"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   Text="Wifi, BIOS, BIOS Unlocker"
                                                   x:Name="utalab2" />
                                    </StackPanel>
                                </Grid>
                            </ui:CardAction>
                            <ui:CardAction Click="SysInfo"
                                           Grid.Column="2"
                                           Grid.Row="2"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch">
                                <Grid Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="0,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Source="../../Resources/pcinfo.png"
                                           Grid.Column="0"
                                           Margin="0,0,0,0" />
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Margin="0"
                                                   FontSize="13"
                                                   FontWeight="Medium"
                                                   Text="System Infos"
                                                   x:Name="labinfo" />
                                        <TextBlock FontSize="12"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   x:Name="pcname"
                                                   Text="[PC Name]" />
                                    </StackPanel>
                                </Grid>
                            </ui:CardAction>
                            <ui:CardAction Click="GoSettings"
                                           Grid.Column="4"
                                           Grid.Row="2"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch">
                                <Grid Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="0,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Source="../../Resources/settings.png"
                                           Grid.Column="0"
                                           Margin="0,0,0,0" />
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Margin="0"
                                                   FontSize="13"
                                                   FontWeight="Medium"
                                                   Text="Settings"
                                                   x:Name="labset" />
                                        <TextBlock FontSize="12"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   Text="Langs, logs and more" />
                                    </StackPanel>
                                </Grid>
                            </ui:CardAction>
                            <ui:CardAction Click="About"
                                           Grid.Column="6"
                                           Grid.Row="2"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"
                                           ClipToBounds="True">
                                <Grid Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="0,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Source="../../Resources/about.png"
                                           Grid.Column="0"
                                           Margin="0,0,0,0" />
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Margin="0"
                                                   FontSize="13"
                                                   FontWeight="Medium"
                                                   Text="About"
                                                   x:Name="lababout" />
                                        <TextBlock FontSize="12"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   Text="Unowhy Tools"
                                                   x:Name="lababout2" />
                                    </StackPanel>
                                </Grid>
                            </ui:CardAction>
                        </Grid>
                        <Grid Grid.Row="0"
                              x:Name="utagrid"
                              Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="67.25" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <ui:CardAction Grid.Column="0"
                                           Grid.Row="2"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"
                                           Click="UTW">
                                <Grid Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="0,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Source="../../Resources/UTW.png"
                                           Grid.Column="0"
                                           Margin="0,0,0,0"
                                           RenderOptions.BitmapScalingMode="HighQuality" />
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Margin="0"
                                                   FontSize="13"
                                                   FontWeight="Medium"
                                                   Text="Unowhy Tools Wifi" />
                                        <TextBlock FontSize="12"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   Text="SSID, Password, Proxy" />
                                    </StackPanel>
                                </Grid>
                            </ui:CardAction>
                            <ui:CardAction Grid.Column="2"
                                           Grid.Row="2"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"
                                           Click="UTB">
                                <Grid Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="0,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Source="../../Resources/UTB.png"
                                           Grid.Column="0"
                                           Margin="0,0,0,0"
                                           RenderOptions.BitmapScalingMode="HighQuality" />
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Margin="0"
                                                   FontSize="13"
                                                   FontWeight="Medium"
                                                   Text="Unowhy Tools BIOS" />
                                        <TextBlock FontSize="12"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   Text="Dump, Flash, Customize" />
                                    </StackPanel>
                                </Grid>
                            </ui:CardAction>
                            <ui:CardAction Grid.Column="4"
                                           Grid.Row="2"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch"
                                           Click="UTBU">
                                <Grid Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="0,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Source="../../Resources/UTB.png"
                                           Grid.Column="0"
                                           Margin="0,0,0,0"
                                           RenderOptions.BitmapScalingMode="HighQuality" />
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Margin="0"
                                                   FontSize="13"
                                                   FontWeight="Medium"
                                                   Text="Unowhy Tools BIOS Unlocker" />
                                        <TextBlock FontSize="12"
                                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                   Text="Unlock" />
                                    </StackPanel>
                                </Grid>
                            </ui:CardAction>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</ui:UiPage>
