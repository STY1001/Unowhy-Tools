<Window x:Class="Unowhy_Tools_WPF.Views.TrayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:demo="clr-namespace:Unowhy_Tools_WPF"
        xmlns:diagnostics="clr-namespace:Unowhy_Tools_WPF.Views.Diagnostics"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pages="clr-namespace:Unowhy_Tools_WPF.Views.Pages"
        xmlns:windows="clr-namespace:Unowhy_Tools_WPF.Views.Windows"
        xmlns:controls="clr-namespace:Unowhy_Tools_WPF.Views.Windows"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Unowhy Tools Tray"
        d:DesignHeight="700"
        d:DesignWidth="900"
        Height="700"
        Width="900"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        mc:Ignorable="d"
        Initialized="Window_Initialized">
    <Grid>
        <Grid x:Name="BackGrid"
            MouseDown="Grid_MouseDown"
              Background="#6a000000"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch"/>
        <Grid x:Name="TrayGrid"
              RenderTransformOrigin="0.5,0.5"
              VerticalAlignment="Center"
              HorizontalAlignment="Center">
            <Grid.RenderTransform>
                <ScaleTransform ScaleX="1"
                                ScaleY="1"/>
            </Grid.RenderTransform>
            <Border Height="600"
                    Width="800"
                    x:Name="Border1"
                    Background="Transparent"
                    BorderBrush="#2b2b2b"
                    BorderThickness="1"
                    CornerRadius="8,8,8,8">
            </Border>
            <Border Height="600"
                    Width="800"
                    x:Name="Border2"
                    Background="Transparent"
                    BorderBrush="#2b2b2b"
                    BorderThickness="3"
                    CornerRadius="8,8,8,8">
            </Border>
            <Border Height="600"
                    Width="800"
                    x:Name="TrayBorder"
                    Background="{ui:ThemeResource ApplicationBackgroundBrush}"
                    BorderBrush="#2b2b2b"
                    BorderThickness="2"
                    CornerRadius="8,8,8,8">
                <Grid>
                    <Border BorderBrush="#353535"
                            BorderThickness="1"
                            CornerRadius="8">
                        <Grid x:Name="MainGrid">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="15" />
                                <RowDefinition Height="64" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Image Source="/Resources/UTLogoWhite3.0.png"
                                       Grid.Column="0"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       HorizontalAlignment="Left"
                                       Margin="15,0,0,0" />
                                <Grid Grid.Column="1"
                                      HorizontalAlignment="Right"
                                      Margin="0,0,15,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Orientation="Horizontal">
                                        <TextBlock Text="17:20"
                                                   FontSize="26"
                                                   FontFamily="Segoe UI Variable Display Bold"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                   VerticalAlignment="Bottom"
                                                   x:Name="time" />
                                        <TextBlock Text="00"
                                                   Margin="3,0,0,2"
                                                   FontSize="20"
                                                   FontFamily="Segoe UI Variable Display SemiBold"
                                                   Foreground="#b2b2b2"
                                                   VerticalAlignment="Bottom"
                                                   x:Name="time2" />
                                    </StackPanel>
                                    <TextBlock Text="07/08/2006"
                                               Grid.Row="1"
                                               FontSize="18"
                                               FontFamily="Segoe UI"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                               VerticalAlignment="Top"
                                               x:Name="date" />
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="2"
                                  Margin="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0"
                                      x:Name="PerfViewer"
                                      Visibility="Visible">
                                    <StackPanel Orientation="Vertical"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Stretch"
                                                Margin="15">
                                        <StackPanel.Resources>
                                            <Style TargetType="Grid">
                                                <Setter Property="Margin"
                                                        Value="0,0,0,10" />
                                            </Style>
                                        </StackPanel.Resources>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="64" />
                                                <ColumnDefinition Width="15" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="32" />
                                                <RowDefinition Height="32" />
                                            </Grid.RowDefinitions>
                                            <ui:ProgressRing Grid.Row="0"
                                                             Grid.RowSpan="2"
                                                             Progress="0"
                                                             x:Name="cpuring" />
                                            <Image Source="../Resources/cpu.png"
                                                   Grid.Row="0"
                                                   Grid.RowSpan="2"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Height="32" />
                                            <TextBlock  Grid.Row="0"
                                                        Grid.Column="2"
                                                        Text="CPU Usage"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        FontSize="16"
                                                        FontFamily="Segoe UI SemiBold"
                                                        VerticalAlignment="Bottom"
                                                        HorizontalAlignment="Left"
                                                        x:Name="cpulab" />
                                            <StackPanel Grid.Row="1"
                                                        Grid.Column="2"
                                                        Orientation="Horizontal">
                                                <TextBlock Text="0%"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           FontSize="14"
                                                           FontFamily="Segoe UI SemiBold"
                                                           x:Name="cpuper" />
                                                <TextBlock  Margin="10,0,0,0"
                                                            Text="CPU"
                                                            Foreground="#b2b2b2"
                                                            FontSize="13"
                                                            FontFamily="Segoe UI Normal"
                                                            VerticalAlignment="Top"
                                                            HorizontalAlignment="Left"
                                                            x:Name="cpucap" />
                                            </StackPanel>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="64" />
                                                <ColumnDefinition Width="15" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="32" />
                                                <RowDefinition Height="32" />
                                            </Grid.RowDefinitions>
                                            <ui:ProgressRing Grid.Row="0"
                                                             Grid.RowSpan="2"
                                                             Progress="0"
                                                             x:Name="ramring" />
                                            <Image Source="../Resources/ram.png"
                                                   Grid.Row="0"
                                                   Grid.RowSpan="2"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Height="32" />
                                            <TextBlock  Grid.Row="0"
                                                        Grid.Column="2"
                                                        Text="RAM Usage"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        FontSize="16"
                                                        FontFamily="Segoe UI SemiBold"
                                                        VerticalAlignment="Bottom"
                                                        HorizontalAlignment="Left"
                                                        x:Name="ramlab" />
                                            <StackPanel Orientation="Horizontal"
                                                        Grid.Row="1"
                                                        Grid.Column="2">
                                                <TextBlock Text="0%"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           FontSize="14"
                                                           FontFamily="Segoe UI SemiBold"
                                                           x:Name="ramper" />
                                                <TextBlock  Margin="10,0,0,0"
                                                            Text="RAM"
                                                            Foreground="#b2b2b2"
                                                            FontSize="13"
                                                            FontFamily="Segoe UI Normal"
                                                            x:Name="ramcap" />
                                            </StackPanel>

                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="64" />
                                                <ColumnDefinition Width="15" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="32" />
                                                <RowDefinition Height="32" />
                                            </Grid.RowDefinitions>
                                            <ui:ProgressRing Grid.Row="0"
                                                             Grid.RowSpan="2"
                                                             Progress="0"
                                                             x:Name="storring" />
                                            <Image Source="../Resources/storage.png"
                                                   Grid.Row="0"
                                                   Grid.RowSpan="2"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Height="32" />
                                            <TextBlock  Grid.Row="0"
                                                        Grid.Column="2"
                                                        Text="Storage Usage"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        FontSize="16"
                                                        FontFamily="Segoe UI SemiBold"
                                                        VerticalAlignment="Bottom"
                                                        HorizontalAlignment="Left"
                                                        x:Name="storlab" />
                                            <StackPanel Orientation="Horizontal"
                                                        Grid.Row="1"
                                                        Grid.Column="2">

                                                <TextBlock Text="0%"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           FontSize="14"
                                                           FontFamily="Segoe UI SemiBold"
                                                           x:Name="storper" />
                                                <TextBlock Text="Storage"
                                                           Margin="10,0,0,0"
                                                           Foreground="#b2b2b2"
                                                           FontSize="13"
                                                           FontFamily="Segoe UI Normal"
                                                           x:Name="storcap" />
                                            </StackPanel>

                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="64" />
                                                <ColumnDefinition Width="15" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="32" />
                                                <RowDefinition Height="32" />
                                            </Grid.RowDefinitions>
                                            <ui:ProgressRing Grid.Row="0"
                                                             Grid.RowSpan="2"
                                                             Progress="0"
                                                             x:Name="batring" />
                                            <Image Source="../Resources/bat100.png"
                                                   Grid.Row="0"
                                                   Grid.RowSpan="2"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Height="24"
                                                   x:Name="batimg" />
                                            <Image Source="../Resources/charge.png"
                                                   Margin="10,0,0,0"
                                                   Grid.Row="0"
                                                   Grid.RowSpan="2"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"
                                                   Height="16"
                                                   x:Name="batstatusimg" />
                                            <Image Source="../Resources/power.png"
                                                   Margin="0,0,10,0"
                                                   Grid.Row="0"
                                                   Grid.RowSpan="2"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Height="16"
                                                   x:Name="batmodeimg" />
                                            <TextBlock  Grid.Row="0"
                                                        Grid.Column="2"
                                                        Text="Battery info"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        FontSize="16"
                                                        FontFamily="Segoe UI SemiBold"
                                                        VerticalAlignment="Bottom"
                                                        HorizontalAlignment="Left"
                                                        x:Name="batlab" />
                                            <StackPanel Grid.Row="1"
                                                        Grid.Column="2"
                                                        Orientation="Horizontal">
                                                <TextBlock Text="0%"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           FontSize="14"
                                                           FontFamily="Segoe UI SemiBold"
                                                           x:Name="batper" />
                                                <TextBlock  Margin="10,0,0,0"
                                                            Text="BAT"
                                                            Foreground="#b2b2b2"
                                                            FontSize="13"
                                                            FontFamily="Segoe UI Normal"
                                                            VerticalAlignment="Top"
                                                            HorizontalAlignment="Left"
                                                            x:Name="batcap" />
                                            </StackPanel>
                                        </Grid>
                                        <ui:CardAction HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Stretch"
                                                       IsChevronVisible="True"
                                                       Click="QO_Click">
                                            <Grid Grid.Row="0"
                                                  Grid.Column="0"
                                                  Margin="0,0,0,0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="32" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Image Source="../Resources/settings.png"
                                                       Grid.Column="0"
                                                       Margin="0,0,0,0" />
                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Margin="0"
                                                               FontSize="13"
                                                               FontWeight="Medium"
                                                               Text="Quick option"
                                                               x:Name="labqo" />
                                                    <TextBlock FontSize="12"
                                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                               Text="Privacy, Power"
                                                               x:Name="labqodesc" />
                                                </StackPanel>
                                            </Grid>
                                        </ui:CardAction>
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Column="0"
                                      x:Name="QuickOption"
                                      Visibility="Collapsed">
                                    <StackPanel Orientation="Vertical"
                                                VerticalAlignment="Stretch"
                                                HorizontalAlignment="Stretch"
                                                Margin="15">
                                        <StackPanel.Resources>
                                            <Style TargetType="Grid">
                                                <Setter Property="Margin"
                                                        Value="0,0,0,10" />
                                            </Style>
                                        </StackPanel.Resources>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="10" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="10" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="32" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Orientation="Horizontal"
                                                        Grid.Column="0"
                                                        Grid.Row="0"
                                                        Grid.ColumnSpan="2">
                                                <Image Source="../Resources/privacy.png"
                                                       Height="32" />
                                                <TextBlock Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           Text="Privacy"
                                                           FontSize="16"
                                                           FontFamily="Segoe UI"
                                                           VerticalAlignment="Center"
                                                           Margin="5,0,0,0"
                                                           x:Name="labprivacy" />
                                            </StackPanel>
                                            <ui:NavigationSeparator Grid.Column="0"
                                                                    Grid.Row="1"
                                                                    Grid.RowSpan="4"
                                                                    HorizontalAlignment="Center" />
                                            <Grid Grid.Column="1"
                                                  Grid.Row="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="auto" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Orientation="Horizontal"
                                                            Grid.Column="0">
                                                    <Image Source="../Resources/camera.png"
                                                           Height="32" />
                                                    <TextBlock Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                               Text="Camera"
                                                               FontSize="14"
                                                               FontFamily="Segoe UI"
                                                               VerticalAlignment="Center"
                                                               Margin="5,0,0,0" />
                                                </StackPanel>
                                                <ui:ToggleSwitch x:Name="camswitch"
                                                                 Click="switch_Changed"
                                                                 Margin="0,0,0,0"
                                                                 Grid.Column="1" />
                                            </Grid>
                                            <Grid Grid.Column="1"
                                                  Grid.Row="4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="auto" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Orientation="Horizontal"
                                                            Grid.Column="0">
                                                    <Image Source="../Resources/micro.png"
                                                           Height="32" />
                                                    <TextBlock Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                               Text="Micro"
                                                               FontSize="14"
                                                               FontFamily="Segoe UI"
                                                               VerticalAlignment="Center"
                                                               Margin="5,0,0,0" />
                                                </StackPanel>
                                                <ui:ToggleSwitch x:Name="micswitch"
                                                                 Click="switch_Changed"
                                                                 Margin="0,0,0,0"
                                                                 Grid.Column="1" />
                                            </Grid>
                                        </Grid>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="10" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="10" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="32" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Orientation="Horizontal"
                                                        Grid.Column="0"
                                                        Grid.Row="0"
                                                        Grid.ColumnSpan="2">
                                                <Image Source="../Resources/bat100.png"
                                                       Height="32"
                                                       x:Name="qobatimg" />
                                                <TextBlock Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           Text="Power"
                                                           FontSize="16"
                                                           FontFamily="Segoe UI"
                                                           VerticalAlignment="Center"
                                                           Margin="5,0,0,0"
                                                           x:Name="labpower" />
                                            </StackPanel>
                                            <ui:NavigationSeparator Grid.Column="0"
                                                                    Grid.Row="1"
                                                                    Grid.RowSpan="4"
                                                                    HorizontalAlignment="Center" />
                                            <Grid Grid.Column="1"
                                                  Grid.Row="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="auto" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Orientation="Horizontal"
                                                            Grid.Column="0">
                                                    <Image Source="../Resources/power.png"
                                                           Height="32"
                                                           x:Name="qopmodeimg" />
                                                    <TextBlock Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                               Text="Power mode"
                                                               FontSize="14"
                                                               FontFamily="Segoe UI"
                                                               VerticalAlignment="Center"
                                                               Margin="5,0,0,0"
                                                               x:Name="labpowermode" />
                                                </StackPanel>
                                                <ComboBox Margin="0,0,0,0"
                                                          Grid.Column="1"
                                                          Width="150"
                                                          x:Name="pmodebox"
                                                          SelectionChanged="pmodebox_SelectionChanged"
                                                          DropDownClosed="pmodebox_DropDownClosed"
                                                          DropDownOpened="pmodebox_DropDownOpened">
                                                    <ComboBoxItem x:Name="pmodeperf">
                                                        <TextBlock Text="Performance"
                                                                   x:Name="pmodeperftext" />
                                                    </ComboBoxItem>
                                                    <ComboBoxItem x:Name="pmodebalanced">
                                                        <TextBlock Text="Balanced"
                                                                   x:Name="pmodebalancedtext" />
                                                    </ComboBoxItem>
                                                    <ComboBoxItem x:Name="pmodeefficiency">
                                                        <TextBlock Text="Efficiency"
                                                                   x:Name="pmodeefficiencytext" />
                                                    </ComboBoxItem>
                                                </ComboBox>
                                            </Grid>
                                        </Grid>
                                        <Grid Margin="0,30,0,0" />
                                        <ui:NavigationSeparator />
                                        <ui:CardAction HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Stretch"
                                                       Click="PV_Click">
                                            <Grid Grid.Row="0"
                                                  Grid.Column="0"
                                                  Margin="0,0,0,0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="32" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Image Source="../Resources/monitor.png"
                                                       Grid.Column="0"
                                                       Margin="0,0,0,0" />
                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Margin="0"
                                                               FontSize="13"
                                                               FontWeight="Medium"
                                                               Text="System monitoring"
                                                               x:Name="labpvback" />
                                                    <TextBlock FontSize="12"
                                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                               Text="CPU, RAM, Storage, Battery"
                                                               x:Name="labpvdescback" />
                                                </StackPanel>
                                            </Grid>
                                        </ui:CardAction>
                                    </StackPanel>
                                </Grid>
                                <ui:NavigationSeparator Grid.Column="1"
                                                        Margin="7.5,0,7.5,0" />
                                <Grid Grid.Column="2"
                                      x:Name="QL"
                                      Visibility="Visible">
                                    <StackPanel Orientation="Vertical"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Stretch"
                                                Margin="15">
                                        <ui:CardAction HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Stretch"
                                                       Click="T_Click">
                                            <Grid Grid.Row="0"
                                                  Grid.Column="0"
                                                  Margin="0,0,0,0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="32" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Image Source="../Resources/taskmgr.png"
                                                       Grid.Column="0"
                                                       Margin="0,0,0,0"
                                                       x:Name="imgtask" />
                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Margin="0"
                                                               FontSize="13"
                                                               FontWeight="Medium"
                                                               Text="Task Manager"
                                                               x:Name="labtask" />
                                                    <TextBlock FontSize="12"
                                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                               Text="taskmgr.exe"
                                                               x:Name="labtaskdesc" />
                                                </StackPanel>
                                            </Grid>
                                        </ui:CardAction>
                                        <ui:CardAction HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Stretch"
                                                       Click="C_Click"
                                                       Margin="0,5,0,0">
                                            <Grid Grid.Row="0"
                                                  Grid.Column="0"
                                                  Margin="0,0,0,0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="32" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Image Source="../Resources/cmd.png"
                                                       Grid.Column="0"
                                                       Margin="0,0,0,0"
                                                       x:Name="imgcmd" />
                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Margin="0"
                                                               FontSize="13"
                                                               FontWeight="Medium"
                                                               Text="CMD Terminal"
                                                               x:Name="labcmd" />
                                                    <TextBlock FontSize="12"
                                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                               Text="cmd.exe"
                                                               x:Name="labcmddesc" />
                                                </StackPanel>
                                            </Grid>
                                        </ui:CardAction>
                                        <ui:CardAction HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Stretch"
                                                       Click="R_Click"
                                                       Margin="0,5,0,0">
                                            <Grid Grid.Row="0"
                                                  Grid.Column="0"
                                                  Margin="0,0,0,0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="32" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Image Source="../Resources/registry.png"
                                                       Grid.Column="0"
                                                       Margin="0,0,0,0"
                                                       x:Name="imgreg" />
                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Margin="0"
                                                               FontSize="13"
                                                               FontWeight="Medium"
                                                               Text="REG Editor"
                                                               x:Name="labreg" />
                                                    <TextBlock FontSize="12"
                                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                               Text="regedit.exe"
                                                               x:Name="labregdesc" />
                                                </StackPanel>
                                            </Grid>
                                        </ui:CardAction>
                                        <ui:CardAction HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Stretch"
                                                       Click="G_Click"
                                                       Margin="0,5,0,0">
                                            <Grid Grid.Row="0"
                                                  Grid.Column="0"
                                                  Margin="0,0,0,0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="32" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Image Source="../Resources/script.png"
                                                       Grid.Column="0"
